@model ArcheProjectWebApp.Models.AccountViewModel
@{
    ViewData["Title"] = "ChangePassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>ChangePassword</h3>
<form asp-action="ChangePassword" asp-controller="Account" method="post">
   @* <div class="form-control">*@
        <div class="form-group">
            <label asp-for="OldPassword" class="control-label"></label>
            <input asp-for="OldPassword" class="control-label" />
            <span asp-validation-for="OldPassword" class="control-label alert-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="NewPassword" class="control-label"></label>
            <input asp-for="NewPassword" class="control-label" />
            <span asp-validation-for="NewPassword" class="control-label alert-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="ConfirmPassword" class="control-label"></label>
            <input asp-for="ConfirmPassword" class="control-label" />
            <span asp-validation-for="ConfirmPassword" class="control-label alert-danger"></span>
        </div>
        <div>
            <input type="submit" class="btn btn-primary" value="Change" />
            @*<a asp-action="Login" asp-controller="Account" class="btn btn-success">Login</a>*@
            <input type="reset" class="btn btn-danger" value="Cancel" />
        </div>
    @*</div>*@
</form>

